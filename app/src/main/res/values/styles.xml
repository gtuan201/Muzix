        <item name="android:textSize">18sp</item>
    </style>
    <style name="ExpandTitle">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
